<?xml version="1.0" encoding="utf-8"?>

<configuration>
	<log4net>
		<root>
			<level value="INFO" />
			<appender-ref ref="FileAppenderXml" />
		</root>
		<logger name="General">
			<level value="INFO" />
			<appender-ref ref="Console" />
		</logger>
		<appender name="Console" type="log4net.Appender.ConsoleAppender">
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date %level %logger - %message%newline" />
			</layout>
		</appender>
		<appender name="FileAppenderXml" type="log4net.Appender.RollingFileAppender">
			<file type="log4net.Util.PatternString" value="log\App.log"/>
			<appendToFile value="true"/>
			<rollingStyle value="Size" />
			<maxSizeRollBackups value="5" />
			<maximumFileSize value="100MB" />
			<staticLogFileName value="true" />
			<threshold value="INFO" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d [%t] %p %logger [%x] - %m%newline"/>
      </layout>
			<param name="Encoding" value="utf-8" />
		</appender>
	</log4net>
</configuration>